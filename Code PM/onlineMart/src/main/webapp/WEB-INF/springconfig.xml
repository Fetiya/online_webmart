          class="org.springframework.mail.SimpleMailMessage"> 
        <property name="from" value="mum.smartmart@gmail.com" />
        <property name="to" value="wel.berhe@gmail.com" />
        <property name="subject" value="Smart Mart: Notification" />
        <property name="text">
            <value>
		<![CDATA[
